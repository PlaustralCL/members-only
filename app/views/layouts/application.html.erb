<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-success is-light">
        <%= notice %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger is-light">
        <%= alert %>
      </div>
    <% end %>

   <nav class="navbar has-background-success-dark">
     <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-5 has-text-light">MembersOnly</h1>
      <% end %>

      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasic">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
     </div>

     <div class="navbar-menu" id="navbarBasic">
       <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to "New Post",
                        new_post_path,
                        class: "button" %>

            <% if user_signed_in? %>
              <div class="navbar-item">
                <%= link_to current_user.name,
                            root_path,
                            class: "button has-background-success-dark is-outlined has-text-light"   %>
              </div>

              <div class="navbar-item">
                <%= link_to "Sign out",
                            destroy_user_session_path,
                            method: :delete,
                            class: "button has-background-success-dark is-outlined has-text-light" %>
              </div>

              <% else %>
                <div class="navbar-item">
                  <%= link_to "Log in",
                              new_user_session_path,
                              class: "button has-background-success-dark is-outlined has-text-light" %>
                </div>
                <div class="navbar-item">
                  <%= link_to "Sign up",
                              new_user_registration_path,
                              class: "button has-background-success-dark is-outlined has-text-light" %>
                </div>
            <% end %>
          </div>


        </div>
       </div>
     </div>
   </nav>


    <%= yield %>
  </body>
</html>
