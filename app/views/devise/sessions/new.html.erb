<div class="section">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <h2 class="title is-2">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, class: "input", autocomplete: "email" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control">
            <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>

        <div class="control">
          <%= f.submit "Log in", class: "button has-background-success-dark has-text-light"%>
        </div>
      <% end %>

      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
