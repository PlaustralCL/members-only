<h1>New Post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this article
    from being saved: </h2>

    <ul>
      <% @post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @post do |form| %>
  <%= form.label(:title) %>
  <br>
  <%= form.text_field(:title) %>
  <br>
  <%= form.label(:body) %>
  <br>
  <%= form.text_area(:body, size: "60x10") %>
  <%= form.submit %>
<% end %>

